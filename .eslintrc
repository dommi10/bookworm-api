{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "plugins": ["prettier"],
  "extends": ["airbnb", "prettier"],

  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-duplicate-imports": "error",
    // "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-underscore-dangle": [1, { "allow": ["_id"] }]
  }
}
